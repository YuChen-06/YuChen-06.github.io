    (a, b) =>
      new Date(b.frontmatter.pubDate).getTime() -
      new Date(a.frontmatter.pubDate).getTime()
  )
  .slice(startIndex, endIndex);

// ç”Ÿæˆåˆ†é¡µé“¾æ¥
const generatePageUrl = (page: number) => {
  return page === 1 ? "/blog/" : `/blog/?page=${page}`;
};

---
import BaseLayout from "../../layouts/BaseLayout.astro";
import DarkVeil from "../../components/Backgrounds/DarkVeil.jsx";
import "../../styles/GlassContainer.css";

const allPosts = await Astro.glob("../posts/*.md");
const tags = [...new Set(allPosts.map((post) => post.frontmatter.tags).flat())];

// 计算每个标签的文章数量
const tagCounts = {};
allPosts.forEach((post) => {
  post.frontmatter.tags.forEach((tag) => {
    tagCounts[tag] = (tagCounts[tag] || 0) + 1;
  });
});

// 按文章数量排序标签
const sortedTags = tags.sort((a, b) => tagCounts[b] - tagCounts[a]);
---

<BaseLayout pageTitle="标签索引">
  <!-- DarkVeil 背景效果 -->
  <div
    style="width: 100%; height: 100vh; position: fixed; top: 0; left: 0; z-index: 0; pointer-events: none;"
  >
    <DarkVeil
      client:only="preact"
      dotSize={2}
      gap={15}
      baseColor="rgba(140,255,179,0.1)"
    />
  </div>

  <div class="tags-page-container">
    <!-- 页面标题 -->
    <div class="page-title-section">
      <h1 class="page-title">所有标签</h1>
      <p class="page-description">点击标签搜索相关文章</p>
    </div>

    <!-- 统计信息胶囊 -->
    <div class="stats-capsule">
      <div class="stat-item">
        <svg
          class="stat-icon"
          viewBox="0 0 24 24"
          fill="none"
          stroke="currentColor"
          stroke-width="2"
        >
          <path
            d="M20.59 13.41l-7.17 7.17a2 2 0 0 1-2.83 0L2 12V2h10l8.59 8.59a2 2 0 0 1 0 2.82z"
          ></path>
          <line x1="7" y1="7" x2="7.01" y2="7"></line>
        </svg>
        <span class="stat-number">{tags.length}</span>
        <span class="stat-label">个标签</span>
      </div>
      <div class="stat-divider"></div>
      <div class="stat-item">
        <svg
          class="stat-icon"
          viewBox="0 0 24 24"
          fill="none"
          stroke="currentColor"
          stroke-width="2"
        >
          <path d="M14 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V8z"
          ></path>
          <polyline points="14,2 14,8 20,8"></polyline>
          <line x1="16" y1="13" x2="8" y2="13"></line>
          <line x1="16" y1="17" x2="8" y2="17"></line>
          <polyline points="10,9 9,9 8,9"></polyline>
        </svg>
        <span class="stat-number">{allPosts.length}</span>
        <span class="stat-label">篇文章</span>
      </div>
    </div>

    <!-- 标签云 -->
    <div class="tag-cloud">
      {
        sortedTags.map((tag, index) => (
          <a
            href={`/search/?q=${encodeURIComponent(tag)}`}
            class="tag-pill"
            style={`animation-delay: ${index * 0.1}s`}
          >
            {tag} <span class="tag-count">({tagCounts[tag]})</span>
          </a>
        ))
      }
    </div>
  </div>
</BaseLayout>

<style>
  /* 左上角导航 */
  .top-navigation {
    position: fixed;
    top: 2rem;
    left: 2rem;
    z-index: 1000;
  }

  .back-button {
    display: inline-block;
    padding: 0.75rem 1.5rem;
    background: rgba(0, 0, 0, 0.8);
    color: white;
    text-decoration: none;
    border-radius: 10px;
    border: 1px solid rgba(255, 255, 255, 0.2);
    transition: all 0.3s ease;
    font-weight: 500;
    backdrop-filter: blur(10px);
  }

  .back-button:hover {
    background: rgba(0, 0, 0, 0.9);
    transform: translateY(-2px);
    box-shadow: 0 5px 15px rgba(0, 0, 0, 0.3);
  }

  /* 主容器 */
  .tags-page-container {
    width: 65vw;
    max-width: 65vw;
    margin: 0 auto;
    padding: 4rem 2rem 2rem;
    box-sizing: border-box;
  }

  /* 页面标题区域 */
  .page-title-section {
    text-align: center;
    margin-bottom: 2rem;
  }

  .page-title {
    font-size: 2.8rem;
    font-weight: 700;
    margin-bottom: 0.5rem;
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    letter-spacing: -0.02em;
  }

  .page-description {
    color: rgba(255, 255, 255, 0.7);
    font-size: 1.1rem;
    margin: 0;
    font-weight: 400;
  }

  /* 统计信息胶囊 */
  .stats-capsule {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 0;
    margin: 0 auto 3rem;
    background: rgba(255, 255, 255, 0.1);
    backdrop-filter: blur(16px);
    -webkit-backdrop-filter: blur(16px);
    border: 1px solid rgba(255, 255, 255, 0.15);
    border-radius: 50px;
    padding: 1rem 2rem;
    max-width: fit-content;
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
  }

  .stat-item {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    color: white;
  }

  .stat-icon {
    width: 20px;
    height: 20px;
    color: #667eea;
    flex-shrink: 0;
  }

  .stat-number {
    font-size: 1.5rem;
    font-weight: 700;
    color: #667eea;
  }

  .stat-label {
    font-size: 0.9rem;
    color: rgba(255, 255, 255, 0.8);
    font-weight: 500;
  }

  .stat-divider {
    width: 1px;
    height: 2rem;
    background: rgba(255, 255, 255, 0.2);
    margin: 0 1.5rem;
  }

  /* 标签云 */
  .tag-cloud {
    display: flex;
    flex-wrap: wrap;
    gap: 1.5rem; /* 增大间距 */
    justify-content: center;
    align-items: center;
    max-width: 1000px;
    margin: 0 auto;
  }

  /* 玻璃磨砂胶囊标签样式 - 增大尺寸 */
  .tag-pill {
    display: inline-block;
    background: rgba(255, 255, 255, 0.1);
    backdrop-filter: blur(10px);
    -webkit-backdrop-filter: blur(10px);
    border: 1px solid rgba(255, 255, 255, 0.2);
    color: white;
    font-size: 16px; /* 增大字体 */
    font-weight: 500;
    text-align: center;
    padding: 12px 24px; /* 增大内边距 */
    border-radius: 30px; /* 调整圆角以适应新尺寸 */
    text-decoration: none;
    transition: all 0.3s cubic-bezier(0.25, 0.8, 0.25, 1);
    box-shadow: 0 3px 12px rgba(0, 0, 0, 0.15);
    opacity: 0;
    animation: fadeInUp 0.6s ease-out forwards;
    min-width: 80px; /* 确保最小宽度 */
    cursor: pointer;
  }

  .tag-pill:hover {
    background: rgba(255, 255, 255, 0.18);
    border-color: rgba(255, 255, 255, 0.35);
    transform: translateY(-3px) scale(1.02);
    box-shadow: 0 6px 20px rgba(102, 126, 234, 0.25);
  }

  .tag-pill:active {
    transform: translateY(-1px) scale(0.98);
    transition: all 0.1s ease;
  }

  .tag-count {
    opacity: 0.7;
    font-size: 0.9em;
    margin-left: 0.5rem;
  }

  /* 动画 */
  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  @keyframes star-movement-bottom {
    0% {
      transform: translate(0%, 0%);
      opacity: 1;
    }
    100% {
      transform: translate(-100%, 0%);
      opacity: 0;
    }
  }

  @keyframes star-movement-top {
    0% {
      transform: translate(0%, 0%);
      opacity: 1;
    }
    100% {
      transform: translate(100%, 0%);
      opacity: 0;
    }
  }

  /* 响应式设计 */
  @media (max-width: 1200px) {
    .tags-page-container {
      width: 75vw;
      max-width: 75vw;
    }
  }

  @media (max-width: 768px) {
    .top-navigation {
      top: 1rem;
      left: 1rem;
    }

    .tags-page-container {
      width: 95vw;
      max-width: 95vw;
      padding: 3rem 1rem 2rem;
    }

    .page-title {
      font-size: 2.2rem;
    }

    .page-description {
      font-size: 1rem;
    }

    .stats-capsule {
      flex-direction: column;
      gap: 1rem;
      padding: 1.5rem;
      border-radius: 20px;
    }

    .stat-divider {
      width: 80%;
      height: 1px;
      margin: 0;
    }

    .tag-cloud {
      gap: 0.75rem;
    }

    .inner-content {
      padding: 12px 20px;
      font-size: 14px;
    }
  }

  /* 暗色主题适配 */
  html.dark .back-button {
    background: rgba(255, 255, 255, 0.1);
    border-color: rgba(255, 255, 255, 0.2);
  }

  html.dark .back-button:hover {
    background: rgba(255, 255, 255, 0.2);
  }

  html.dark .page-description {
    color: rgba(255, 255, 255, 0.7);
  }

  html.dark .stats-capsule {
    background: rgba(0, 0, 0, 0.3);
    border-color: rgba(255, 255, 255, 0.1);
  }

  html.dark .stat-label {
    color: rgba(255, 255, 255, 0.7);
  }

  html.dark .tag-pill {
    background: rgba(0, 0, 0, 0.3);
    border-color: rgba(255, 255, 255, 0.15);
    color: rgba(255, 255, 255, 0.9);
  }

  html.dark .tag-pill:hover {
    background: rgba(0, 0, 0, 0.4);
    border-color: rgba(255, 255, 255, 0.25);
  }

  @media (max-width: 480px) {
    .tags-page-container {
      width: 98vw;
      max-width: 98vw;
      padding: 2rem 0.5rem 1rem;
    }
  }
</style>

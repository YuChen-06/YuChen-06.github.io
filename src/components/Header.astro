---
import CardNav from "./CardNav.jsx";
import ThemeIcon from "./ThemeIcon.astro";
import "../styles/CardNav.css";

const navItems = [
  {
    label: "首页",
    key: "home",
    links: [
      {
        label: "回到首页",
        key: "backToHome",
        href: "/",
        ariaLabel: "回到首页",
      },
    ],
  },
  {
    label: "博客",
    key: "blog",
    links: [
      {
        label: "查看博客",
        key: "viewBlog",
        href: "/blog/",
        ariaLabel: "查看博客",
      },
    ],
  },
  {
    label: "标签",
    key: "tags",
    links: [
      {
        label: "浏览标签",
        key: "browseTags",
        href: "/tags/",
        ariaLabel: "浏览标签",
      },
    ],
  },
  {
    label: "关于",
    key: "about",
    links: [
      {
        label: "关于本站",
        key: "aboutSite",
        href: "/about/",
        ariaLabel: "关于本站",
      },
    ],
  },
];
---

<header>
  <CardNav
    client:load
    logo="/favicon.svg"
    logoAlt="网站 Logo"
    items={navItems}
    menuColor="var(--text-color)"
  >
    <ThemeIcon />
  </CardNav>
</header>

<style>
  header {
    position: relative;
    z-index: 100;
    height: 100px; /* 为导航栏留出空间 */
  }
</style>

---
import BaseLayout from "./BaseLayout.astro";
import DarkVeil from "../components/Backgrounds/DarkVeil.jsx";

const { frontmatter } = Astro.props;
---

<BaseLayout pageTitle={frontmatter.title}>
  <!-- DarkVeil 背景效果 -->
  <div
    style="width: 100%; height: 100vh; position: fixed; top: 0; left: 0; z-index: 0; pointer-events: none;"
  >
    <DarkVeil client:only="preact" />
  </div>

  <div class="post-content">
    <article>
      <header>
        <h1>{frontmatter.title}</h1>
        <p class="meta">
          发布于 {frontmatter.pubDate.slice(0, 10)} | 作者：{frontmatter.author}
        </p>
        {
          frontmatter.image && (
            <img src={frontmatter.image.url} alt={frontmatter.image.alt} />
          )
        }
        {
          frontmatter.tags && (
            <div class="tags">
              {frontmatter.tags.map((tag) => (
                <a href={`/search/?q=${encodeURIComponent(tag)}`} class="tag">
                  #{tag}
                </a>
              ))}
            </div>
          )
        }
      </header>

      <div class="content">
        <slot />
      </div>
    </article>
  </div>
</BaseLayout>

<style>
  article {
    width: 65vw;
    max-width: 65vw;
    margin: 0 auto;
    box-sizing: border-box;
  }

  header {
    margin-bottom: 2rem;
    border-bottom: 1px solid #eee;
    padding-bottom: 1rem;
  }

  h1 {
    color: #333;
    margin-bottom: 0.5rem;
  }

  .meta {
    color: #666;
    font-style: italic;
    margin-bottom: 1rem;
  }

  img {
    width: 100%;
    height: auto;
    border-radius: 8px;
    margin: 1rem 0;
  }

  .tags {
    display: flex;
    gap: 0.5rem;
    flex-wrap: wrap;
    margin-top: 1rem;
  }

  .tag {
    padding: 0.25rem 0.75rem;
    background: rgba(102, 126, 234, 0.2);
    color: #667eea;
    text-decoration: none;
    border-radius: 15px;
    font-size: 0.8rem;
    border: 1px solid rgba(102, 126, 234, 0.3);
    transition: all 0.3s ease;
  }

  .tag:hover {
    background: rgba(102, 126, 234, 0.3);
    color: white;
    transform: translateY(-1px);
  }

  html.dark .tag {
    background: rgba(102, 126, 234, 0.25);
    color: #8b9cf7;
    border-color: rgba(102, 126, 234, 0.4);
  }

  html.dark .tag:hover {
    background: rgba(102, 126, 234, 0.4);
    color: white;
  }

  .post-content {
    position: relative;
    z-index: 10;
    pointer-events: auto;
  }

  .content {
    line-height: 1.6;
  }

  .content h2 {
    color: #444;
    margin-top: 2rem;
    margin-bottom: 1rem;
  }

  .content p {
    margin-bottom: 1rem;
  }

  .content ul,
  .content ol {
    margin-bottom: 1rem;
    padding-left: 2rem;
  }

  .content li {
    margin-bottom: 0.5rem;
  }

  /* 响应式设计 */
  @media (max-width: 1200px) {
    article {
      width: 75vw;
      max-width: 75vw;
    }
  }

  @media (max-width: 768px) {
    article {
      width: 95vw;
      max-width: 95vw;
    }
  }

  @media (max-width: 480px) {
    article {
      width: 98vw;
      max-width: 98vw;
    }
  }
</style>
